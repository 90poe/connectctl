    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceRoot}/cmd/connectctl",
            "env": {},
            "args": [
                "manage",
                "connectors",
                "--cluster",
                "http://localhost:8083",
                "--files",
                "${workspaceRoot}/examples/connector1.json",
                "--sync-period",
                "30s",
                "--loglevel",
                "DEBUG"

            ]
        }
    ]
